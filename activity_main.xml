<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text3"
            android:layout_width="75dp"
            android:layout_height="16dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="44dp"
            android:text="Latitude:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="76dp"
            android:layout_height="18dp"
            android:layout_marginStart="28dp"
            android:text="Longtitude:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text3" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="77dp"
            android:layout_height="17dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="2dp"
            android:text="Altitude:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text5" />

        <TextView
            android:id="@+id/text7"
            android:layout_width="94dp"
            android:layout_height="20dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:text="WiFi Strength:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text6" />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="77dp"
            android:layout_height="19dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="44dp"
            android:text="..."
            app:layout_constraintStart_toEndOf="@+id/text3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/longtitude"
            android:layout_width="77dp"
            android:layout_height="19dp"
            android:layout_marginStart="16dp"
            android:text="..."
            app:layout_constraintStart_toEndOf="@+id/text5"
            app:layout_constraintTop_toBottomOf="@+id/latitude" />

        <TextView
            android:id="@+id/altitude"
            android:layout_width="77dp"
            android:layout_height="19dp"
            android:layout_marginStart="16dp"
            android:text="..."
            app:layout_constraintStart_toEndOf="@+id/text6"
            app:layout_constraintTop_toBottomOf="@+id/longtitude" />

        <TextView
            android:id="@+id/wifi_strength"
            android:layout_width="77dp"
            android:layout_height="19dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="24dp"
            android:text="..."
            app:layout_constraintStart_toEndOf="@+id/text7"
            app:layout_constraintTop_toBottomOf="@+id/altitude" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.wear.widget.BoxInsetLayout>